/* 活动详情页面样式 */
.container {
  padding: 20rpx;
  box-sizing: border-box;
  min-height: 100vh;
  background-color: #f6f6f6;
}

/* 加载中样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #3b7ff3;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 20rpx;
  color: #666;
  font-size: 28rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 错误提示 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.error-text {
  color: #f56c6c;
  font-size: 28rpx;
}

/* 表单卡片样式 */
.form-card, .activity-card, .participant-card {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 表单样式 */
.form-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.required {
  color: #f56c6c;
}

.form-control {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #e4e7ed;
  border-radius: 8rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background-color: #fff;
}

.form-textarea {
  width: 100%;
  height: 180rpx;
  padding: 20rpx;
  border: 1rpx solid #e4e7ed;
  border-radius: 8rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 1.5;
  background-color: #fff;
}

.form-hint {
  font-size: 24rpx;
  color: #909399;
  margin-top: 8rpx;
}

/* 时间选择器 */
.time-range {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.time-picker {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #e4e7ed;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333;
  background-color: #fff;
}

.time-separator {
  padding: 0 20rpx;
  color: #666;
}

/* 地点选择器 */
.location-picker {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #e4e7ed;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333;
  background-color: #fff;
}

.icon-time, .icon-location, .icon-dropdown {
  color: #999;
  font-size: 32rpx;
}

/* 复选框样式 */
.checkbox-group {
  display: flex;
  flex-wrap: wrap;
}

.checkbox-item {
  display: flex;
  align-items: center;
  margin-right: 60rpx;
  margin-bottom: 10rpx;
}

.checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 1rpx solid #e4e7ed;
  border-radius: 4rpx;
  margin-right: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkbox.checked {
  background-color: #3b7ff3;
  border-color: #3b7ff3;
  position: relative;
}

.checkbox.checked::after {
  content: '';
  width: 20rpx;
  height: 10rpx;
  border-left: 4rpx solid #fff;
  border-bottom: 4rpx solid #fff;
  transform: rotate(-45deg);
  position: absolute;
  top: 8rpx;
}

.checkbox-label {
  font-size: 28rpx;
  color: #333;
}

/* 活动详情样式 */
.activity-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.activity-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  line-height: 1.6;
}

.info-section {
  margin-top: 30rpx;
}

.info-item {
  display: flex;
  margin-bottom: 24rpx;
}

.info-icon {
  width: 40rpx;
  font-size: 32rpx;
  margin-right: 20rpx;
}

.info-content {
  flex: 1;
}

.info-label {
  font-size: 24rpx;
  color: #909399;
  margin-bottom: 6rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
}

/* 参与者列表样式 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.participant-count {
  font-size: 24rpx;
  color: #909399;
  font-weight: normal;
  margin-left: 6rpx;
}

.view-all {
  font-size: 26rpx;
  color: #3b7ff3;
  margin-left: auto;
}

.participant-list {
  display: flex;
  flex-wrap: wrap;
}

.participant-item {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  position: relative;
}

.participant-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-bottom: 8rpx;
}

.participant-name {
  font-size: 22rpx;
  color: #666;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
}

.participant-tag {
  position: absolute;
  top: -10rpx;
  right: 10rpx;
  font-size: 20rpx;
  background-color: #3b7ff3;
  color: #fff;
  padding: 2rpx 8rpx;
  border-radius: 10rpx;
}

.no-data {
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #909399;
  font-size: 28rpx;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 0 30rpx;
  z-index: 10;
}

.btn-cancel, .btn-save, .btn-edit, .btn-join, .btn-share {
  flex: 1;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border-radius: 35rpx;
  margin: 0 15rpx;
}

.btn-cancel {
  color: #666;
  background-color: #f2f3f5;
  border: none;
}

.btn-save {
  color: #fff;
  background-color: #3b7ff3;
  border: none;
}

.btn-edit {
  color: #fff;
  background-color: #3b7ff3;
  border: none;
}

.btn-join {
  color: #fff;
  background-color: #67c23a;
  border: none;
}

.btn-join.btn-disabled {
  color: #fff;
  background-color: #95d475;
  opacity: 0.6;
}

.btn-share {
  color: #fff;
  background-color: #f56c6c;
  border: none;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.modal {
  position: fixed;
  width: 80%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  z-index: 1001;
}

.modal-header {
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #909399;
}

.modal-body {
  padding: 30rpx;
}

.range-slider {
  padding: 20rpx 0;
}

.range-display {
  text-align: right;
  font-size: 26rpx;
  color: #3b7ff3;
  margin-top: 10rpx;
}

.modal-footer {
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  border-top: 1rpx solid #f0f0f0;
}

.btn-confirm {
  margin-left: 20rpx;
  padding: 0 40rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #3b7ff3;
  border-radius: 35rpx;
  border: none;
} 